@model BookBooking.Models.BookDetailViewModel

<div class="card" style="max-width: 500px;">
    <div class="row g-0">
        <div class="col-sm-5">
            <img src="~/@Model.GetImageUrl()" class="card-img-top h-100" alt="@Model.Title">
        </div>
        <div class="col-sm-7">
            <div class="card-body">
                <h5 class="card-title">@Model.Title</h5>
                <p class="card-text">@Model.Description</p>

                <span class="badge bg-primary rounded-pill">@Model.Status</span>
                @{
                    var role = User.Claims.FirstOrDefault(x => x.Type.Contains("role")).Value;
                    var isAdmin = role == BookBooking.Models.UserRole.Admin.ToString();
                }

                @if (isAdmin)
                {
                    <a asp-action="Edit"
                       asp-route-id="@Model.Id"
                       class="btn btn-primary btn-block active" role="button" aria-pressed="true">この本を編集する</a>
                    <form asp-action="Delete"
                          asp-route-id="@Model.Id"
                          method="post">
                        <button class="btn btn-secondary btn-block">この本を削除する</button>
                    </form>
                }
                else
                {
                    <form asp-route="@Model.RouteName.Key"
                          asp-route-id="@Model.Id"
                          method="post">
                        <button class="btn btn-primary stretched-link">@Model.RouteName.Value</button>
                    </form>
                }
            </div>
        </div>
    </div>
</div>